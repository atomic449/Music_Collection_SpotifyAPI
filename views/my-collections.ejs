<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Collections</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet "/>
    <style>
        .my-row {
            padding: 10px;
        }
        ul {
            padding: 0;
            margin: 20px 0;
            list-style-type: none;
        }
        li {
            margin-bottom: 10px;
        }
        .collection-link {
            display: flex;
            align-items: center;
            text-decoration: none;
            color: inherit;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .collection-link:hover {
            background-color: #f0f0f0;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center my-row">
            <h1>My Collections</h1>
            <button class="btn btn-primary" onclick="window.location.href='/'">Back to Home</button>
        </div>
        <ul>
            <% collections.forEach(collection => { %>
                <li>
                    <a href="/create-collection?id=<%= collection.Id %>" class="collection-link">
                        <img src="<%= collection.albumCover %>" alt="<%= collection.Name %> cover" style="width: 50px; margin-right: 10px;">
                        <span><%= collection.Name %></span>
                    </a>
                </li>
            <% }) %>
        </ul>
    </div>
</body>

</html>
